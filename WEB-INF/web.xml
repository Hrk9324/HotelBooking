<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Hotel Booking Application</display-name>

    <!-- ========================================= -->
    <!-- FILTER CONFIGURATION                      -->
    <!-- ========================================= -->
    
    <filter>
        <filter-name>NoCacheFilter</filter-name>
        <filter-class>controller.filter.NoCacheFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>NoCacheFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- ========================================= -->
    <!-- SERVLET DECLARATIONS                      -->
    <!-- ========================================= -->
    
    <!-- Core & Auth Servlets -->
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.HomeController</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    
    <!-- Admin Module Servlets -->
    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>controller.admin.AdminDashboardServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>AdminHotelServlet</servlet-name>
        <servlet-class>controller.admin.AdminHotelServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>AdminRoomServlet</servlet-name>
        <servlet-class>controller.admin.AdminRoomServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>AdminCheckinServlet</servlet-name>
        <servlet-class>controller.admin.AdminCheckinServlet</servlet-class>
    </servlet>
    
    <!-- Client Module Servlets -->
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>controller.client.SearchServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>HotelDetailServlet</servlet-name>
        <servlet-class>controller.client.HotelDetailServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>BookingFormServlet</servlet-name>
        <servlet-class>controller.client.BookingFormServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>ConfirmBookingServlet</servlet-name>
        <servlet-class>controller.client.ConfirmBookingServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>HistoryServlet</servlet-name>
        <servlet-class>controller.client.HistoryServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>BookingSuccessServlet</servlet-name>
        <servlet-class>controller.client.BookingSuccessServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>HistoryDetailServlet</servlet-name>
        <servlet-class>controller.client.HistoryDetailServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>controller.client.ProfileServlet</servlet-class>
    </servlet>

    <!-- ========================================= -->
    <!-- WELCOME FILE LIST                         -->
    <!-- ========================================= -->
    
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>

    <!-- ========================================= -->
    <!-- SESSION CONFIGURATION                     -->
    <!-- ========================================= -->
    
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>
